<%- include('../partials/header') %>
<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
  <label>Airlines:
    <select name="airlines">
      <option value="Delta" selected>Delta</option>
      <option value="United">United</option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
    </select>
  </label><br>
  <label>Airport
    <select name="airport">
      <option value="SFO" selected>SFO</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="JFK">JFK</option>
    </select>
  </label><br>
  <label>Flight No:
    <form>
      <input type="text" required pattern="[1-9]\d\d" name="Flight No">
  </form>
  </label><br>
  <label>Departs:
    <input type="datetime-local" name="Departs">
  </label><br>
  <input type="submit" value="submit">
</form>
<%- include('../partials/footer') %>